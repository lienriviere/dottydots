#!/usr/bin/env bash

shopt -s dotglob

linkFiles() {
  from=$(pwd)
  if [[ -n $1 ]]; then
    from=$from/$1
  fi
  from=$from/*
  to=${2:-~}
  if [[ ! -d $to ]]; then
    mkdir $to
  fi
  for file in $from
  do
    if [ -f $file ] || [[ "$file" == */.vim/settings ]] || [[ "$file" == */.vim/snippets ]]; then
      echo "Linking $file to $to/$(basename $file)"
      ln -sf $file $to/$(basename $file)
    fi
  done
}

linkFiles home
linkFiles .vim $HOME/.vim
linkFiles bin $HOME/bin
linkFiles .config $HOME/.config

shopt -u dotglob
